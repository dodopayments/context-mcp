{
  "name": "contextmcp",
  "version": "1.0.0",
  "private": true,
  "description": "ContextMCP - Self-hosted MCP server for your documentation",
  "workspaces": [
    "packages/cli",
    "packages/template"
  ],
  "scripts": {
    "dev:cli": "npm run dev --workspace=contextmcp",
    "build:cli": "npm run build --workspace=contextmcp",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "reindex:dodo": "tsx packages/template/scripts/reindex.ts --config deployments/dodopayments/config.yaml",
    "reindex:dodo:dry": "tsx packages/template/scripts/reindex.ts --config deployments/dodopayments/config.yaml --dry-run",
    "deploy:dodo": "wrangler deploy --config deployments/dodopayments/cloudflare-worker/wrangler.jsonc",
    "dev:dodo": "wrangler dev --config deployments/dodopayments/cloudflare-worker/wrangler.jsonc"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "semantic-search",
    "rag",
    "pinecone",
    "embeddings",
    "cloudflare-workers"
  ],
  "devDependencies": {
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.55.0"
  },
  "engines": {
    "node": ">=18"
  }
}
